<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fall2018.csc2017.game_centre">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pigeon_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pigeon_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="fall2018.csc2017.game_centre.ghost_hunt.GhostHuntStartingActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fall2018.csc2017.game_centre.ghost_hunt.GhostHuntScoreboardActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="fall2018.csc2017.game_centre.ghost_hunt.GhostHuntGameActivity"
            android:screenOrientation="landscape"/>

    </application>

</manifest>