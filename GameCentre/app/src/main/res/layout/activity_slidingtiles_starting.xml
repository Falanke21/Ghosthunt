<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sldingtile_background"
    tools:context="fall2018.csc2017.game_centre.slidingtiles.SlidingTilesStartingActivity"
    android:id="@+id/relativeLayout2">



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/slidingtile_text" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/slidingtile_buttons"
        android:text="Load Saved Game"
        android:textSize="18dp" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LoadButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/slidingtile_buttons"
        android:text="New Game"
        android:textSize="18dp" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LoadButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/slidingtile_buttons"
        android:text="Save Game"
        android:textSize="18dp" />

    <Button
        android:id="@+id/Scoreboard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LoadButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/slidingtile_buttons"
        android:text="Scoreboard"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="@string/sliding_tiles_description" />

</RelativeLayout>